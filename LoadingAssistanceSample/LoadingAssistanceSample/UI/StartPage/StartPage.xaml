<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoadingAssistanceSample.UI.StartPage.StartPage"
             Title="Startpage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#2b2020">
            <StackLayout 
                         VerticalOptions="CenterAndExpand" 
                        HorizontalOptions="CenterAndExpand">
                <Label Text="+++ Wilkommen +++"
                       TextColor="#f7f7f7"
                       HorizontalTextAlignment="Center"
                         />
                <Button x:Name="btnStartLoader"
                        Command="{Binding CmdStartLoadingAssist}"
                        Text="Ladevorgang starten..."
                        BackgroundColor="#bfbdbd"
                        TextColor="#f7f7f7"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>